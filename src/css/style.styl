body{
    // background-image: url("img/bg-default.jpg");
    background-attachment: fixed;
    margin: 0;

}

.container{
    background-color: rgba(0, 0, 0, 0.5);
    min-height: 100vh;
    padding-top: 30px;
}

.menu{
    text-align: center;
    margin: auto;
    height: 120px;
    color: white;
}

.title_h1{
    font-size: 50px;
    margin: 0;
}

a, button{
    font-size: 25px;
}

.row{
    width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    /* justify-content: space-around; */
}

.col
    width: 320px;
    display: inline-block;
    box-sizing: border-box;
    /* margin-right: 30px;
    margin-bottom: 30px;  */
    margin: 40px;
    &:hover
        cursor: pointer;
        box-shadow: 5px 5px 20px 5px rgba(0, 0, 0, 0.5);
        transition: box-shadow 0.2s, filter, 0.8s; 
        &.preview
            filter: brightness(1.2);

.preview
    position: relative;
    img 
        width: 100%;
        opacity: 0;
        position: relative;
        transition: all 0.5s ease-in;
        display:block;
    &:before
        content: "";
        position: absolute;
        top:0;
        left:0;
        width: 100%;
        height: 100%;

.bottom
    background: rgba(0, 0, 0, 0.3);
    position: relative;
    padding: 10px;
    display: flex;
    align-items: center;
    


.avatar
    width: 50px;
    height: 50px;
    overflow: hidden;
    border-radius: 50%;
    margin-right: 20px;
    img 
        width: 100%;
        opacity: 0;
        position: relative;
        transition: all 0.5s ease-in; 
    &:before
            content: "";
            position: absolute;
            width: 50px;
            height: 50px;
            border-radius: 50%;  

.intro
    color: white;
    font-size: 15px;
    text-decoration:none;	


.title
    padding-bottom: 5px;
    white-space: nowrap;
    overflow: hidden;
    width: 200px;
    text-overflow: ellipsis;
